extends layout

block content
  h1= title
  
  ul
  each author in author_list
    li 
      span(class="glyphicon glyphicon-user" aria-hidden="true")
      a(href=author.url) #{author.name} 
      | (Birth: #{author.dob_formatted} - Death: #{author.dod_formatted})

  else
    li There are no authors.